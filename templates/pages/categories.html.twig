{% extends 'basefront.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="container">
        <h1>Categories</h1>

        <div class="row">
            {% for category in categories %}
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ category.name }}</h5>
                            <p class="card-text">
                                Formations : {{ category.formationCount }}
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}